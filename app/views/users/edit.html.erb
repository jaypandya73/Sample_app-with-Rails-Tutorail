<% provide(:title,"Updating") %>

<h1>Update Your Profile Here</h1>
<div class="row">
    <div class="col-md-8 center-block" style="float: none;">

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="row">
  		<div class="col-xs-9">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %></div></div>
<div class="row">
  <div class="col-xs-6 col-md-4"> 
 
  <!-- <div class="col-xs-6 col-md-4"> -->
 
      <%= f.submit "Save Changes", class: "btn btn-primary" %></div></div>
    <% end %>
  </div>
</div>
</div></div>

<div class = "gravatar_edit" >
  <%= gravatar_for @user %>
   <a href="http://gravatar.com/emails" target="_blank">change</a>
</div>